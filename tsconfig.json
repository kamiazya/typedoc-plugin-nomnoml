{
  "compilerOptions": {
    "target": "ESNext",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "outDir": "dist/",
    "rootDir": "./src",
    "noUnusedLocals": true,
    "declaration": false
  },
  "include": [
    "src/*.ts"
  ]
}
